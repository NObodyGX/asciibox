<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <template class="MainPreferences" parent="AdwPreferencesWindow">
    <property name="can-navigate-back">True</property>
    <property name="modal">True</property>
    <property name="title" translatable="yes">Preferences</property>
    <child>
      <object class="AdwPreferencesPage">
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">General</property>
            <child>
              <object class="AdwExpanderRow">
                <property name="title" translatable="yes">Use Custom _Font</property>
                <property name="use-underline">true</property>
                <property name="expanded" bind-source="use_custom_font" bind-property="active"
                  bind-flags="sync-create|bidirectional" />
                <child type="action">
                  <object class="GtkSwitch" id="use_custom_font">
                    <property name="halign">end</property>
                    <property name="valign">center</property>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title" translatable="yes">X</property>
                    <property name="sensitive" bind-source="use_custom_font" bind-property="active"
                      bind-flags="sync-create" />
                    <child type="action">
                      <object class="GtkEntry" id="custom_font">
                        <property name="halign">end</property>
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">Svgbob</property>
            <child>
              <object class="AdwComboRow" id="syntax_mode">
                <property name="title" translatable="yes">Input Syntax Support</property>
                <property name="model">
                  <object class="GtkStringList">
                    <items>
                      <item>mermaid</item>
                      <item>mermaid-enhanced</item>
                      <item>custom</item>
                    </items>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Strict Mode</property>
                <property name="subtitle" translatable="yes">Requires Strict Input</property>
                <property name="use_underline">True</property>
                <property name="activatable-widget">strict_mode</property>
                <child>
                  <object class="GtkSwitch" id="strict_mode">
                    <property name="valign">center</property>
                    <property name="active">False</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>