using Gtk 4.0;
using Adw 1;

template $MermaidPage: Adw.Bin {
  Gtk.Paned paned {
    visible: true;
    resize-start-child: true;
    resize-end-child: true;
    shrink-start-child: false;
    shrink-end-child: false;
    vexpand: true;
    wide-handle: true;
    position-set: true;
    position: 600;

    styles [
      "center-paned",
    ]

    Gtk.Overlay {
      Gtk.ScrolledWindow {
        hexpand: false;
        vexpand: true;
        min-content-width: 360;
        margin-start: 12;

        Gtk.TextView in_view {
          hscroll-policy: natural;
          vscroll-policy: natural;
          pixels-below-lines: 1;
          editable: true;
          justification: left;
          left-margin: 2;
          accepts-tab: true;
          can-focus: true;
        }
      }

      [overlay]
      Gtk.Box {
        orientation: vertical;
        valign: end;
        halign: end;

        Gtk.Button {
          margin-bottom: 2;
          margin-end: 2;
          tooltip-text: _("transform to table");
          icon-name: "play-symbolic";
          action-name: "mermaid.execute-transform";
        }
      }
    }

    Gtk.Box obox {
      orientation: vertical;
      spacing: 0;

      Gtk.Label {
        label: _("mermaid");
      }
    }
  }
}
