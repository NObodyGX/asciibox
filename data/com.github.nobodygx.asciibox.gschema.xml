<?xml version="1.0" encoding="utf-8"?>
<schemalist>
    <schema id="com.github.nobodygx.asciibox" path="/com/github/nobodygx/asciibox/">
        <key name="theme-style" type="s">
            <choices>
                <choice value='system' />
                <choice value='light' />
                <choice value='dark' />
            </choices>
            <default>'system'</default>
            <summary>Settings theme.</summary>
        </key>
        <key name="use-custom-font" type="b">
            <default>false</default>
            <summary>Use System Font</summary>
            <description>If the default system monospace font should be used.</description>
        </key>
        <key name="custom-font" type="s">
            <default>'Monospace 11'</default>
            <summary>Custom Font</summary>
            <description>A custom font to use in the asciibox.</description>
        </key>
        <key name="expand-mode" type="b">
            <default>true</default>
            <summary>Enable auto cell expand</summary>
        </key>
        <key name="cell-max-width" type="i">
            <default>24</default>
            <summary>cell max width</summary>
        </key>
        <key name="line-max-width" type="i">
            <default>120</default>
            <summary>line max width</summary>
        </key>
    </schema>
</schemalist>
